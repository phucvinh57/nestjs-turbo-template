{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": ["NODE_ENV"],
	"tasks": {
		"dev": {
			"dependsOn": ["^prisma:generate"],
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^prisma:generate", "^build"],
			"outputs": ["dist/**"]
		},
		"lint": {},
		"test": {},
		"test:e2e": {},
		"prisma:generate": {
			"cache": false
		},
		"prisma:create": {
			"cache": false
		}
	}
}
